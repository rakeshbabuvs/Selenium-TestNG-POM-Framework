<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Opencart App Test Regression Suite" thread-count="1"
       parallel="tests" verbose="4">


    <listeners>
        <listener
                class-name="com.qa.opencart.Listeners.ExtentReportListener" />
        <listener
                class-name="com.qa.opencart.Listeners.TestAllureListener" />
        <listener
                class-name="com.qa.opencart.Listeners.AnnotationTransforme" />
    </listeners>

    <test name="Login Page Test _ chrome">
        <parameter name="browser" value="chrome" />

        <classes>
            <class name="com.qa.opencart.tests.LoginPageTest" />
        </classes>
    </test>

    <test name="ACC Page Test _ chrome">
        <parameter name="browser" value="chrome" />

        <classes>
            <class name="com.qa.opencart.tests.AccountPageTest" />
        </classes>
    </test>

    <test name="REG Page Test _ chrome">
        <parameter name="browser" value="chrome" />

        <classes>
            <class name="com.qa.opencart.tests.RegistrationPageTest" />
        </classes>
    </test>

    <test name="PROD Page Test _ chrome">
        <parameter name="browser" value="chrome" />

        <classes>
            <class name="com.qa.opencart.tests.ProductInfoPageTest" />
        </classes>
    </test>



